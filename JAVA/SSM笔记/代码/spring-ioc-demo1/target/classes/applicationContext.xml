    <!--           通过destroy-method属性指定当前bean的销毁方法，销毁方法在对象销毁之前执行-->
    <bean id="book" class="com.qfedu.ioc.bean.Book" scope="prototype"
          init-method="init" destroy-method="destory" ></bean>


